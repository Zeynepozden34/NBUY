@model Kitap
@{
    ViewData["Title"] = "Detay";
}

<h1 class="display-6">@Model.Ad</h1>
<div class="row">
    <div class="col-3">
        <div>Buraya resim gelecek</div>
    </div>
    <div class="col-9">
        <div class="card">
            <div class="card-header">
                @Model.Ad
            </div>
            <div class="card-body">
                <h6>Özet</h6>
                <p>@Model.Ozet</p>
            </div>
            <div class="card-footer">
                <p>Basım yılı: @Model.BasimYili,  Sayfa Sayısı: @Model.SayfaSayisi
                <span><a asp-controller="Home" asp-action="KitapListesi" asp-route-id=@Model.Id>Kategori: @Model.Kategori.Ad</span></p>
       
                
            </div>
        </div>
    </div>
</div>