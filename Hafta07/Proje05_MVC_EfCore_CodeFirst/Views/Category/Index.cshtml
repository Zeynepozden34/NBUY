@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1 class="display-6">Categories List</h1>
<hr>

<table class="table table bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Description</td>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
           <tr>
            <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Desc</td>
           </tr>
    
        }
    </tbody>
</table>