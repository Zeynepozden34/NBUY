@model Product
@{
    ViewData["Title"] = "CreateProduct";
}
<h1 class="display-6">Create Product</h1>
<hr>
@* input nameleri nasıl yazıldıysa classdaki proplarımın ismi de aynı yazılmalı *@

<form asp-controller="Home" asp-action="CreateProduct" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="">Product Name</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Name">
        </div>
    </div>


    <div class="row mb-2">
        <div class="col-2">
            <label class="">Product Category</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Category">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="">Product Price</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Price">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="">Is Approved</label>
        </div>
        <div class="col-4">
            <input class="form-check-input" type="checkbox" asp-for="IsApproved">
        </div>
    </div>

    <div class="row">
        <div class="col-6 text-end">
            <input class="btn btn-success btn-lg" type="submit" value="Create">
        </div>
    </div>
</form>
@if (Model != null)  // Model sayfasında modeli tanımlamak için kullanırıxz. Model null değilse bu kodlar çalışacak.
{ 
    <div>
        <p class="text-danger">@Model.Name eklendi</p>
        <p>@(Model.IsApproved ? "Approved": "Not Approved")</p>
    </div>
}
