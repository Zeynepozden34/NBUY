@model Yazar
@{
    ViewData["Title"] = "YazarGüncelle";
}
<h1 class="display-6">Yeni Yazar Oluştur</h1>
<hr>
<form asp-controller="Home" asp-action="YazarGüncelle" method="post">
    <div class="row mb-2">
         <div class="col-2">
            <label class="form-label" asp-for="Ad"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Ad">
        </div>
    </div>
    <div class="row mb-2">
         <div class="col-2">
            <label class="form-label" asp-for="DogumYili"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="DogumYili">
        </div>
    </div>
     <div class="row mb-2">
         <div class="col-2">
            <label class="form-label" asp-for="Cinsiyet"></label>
        </div>
        <div class="col-4">
            <input class="form-check-input" type="radio" asp-for="Cinsiyet" value="K" checked><Label>Kadın</Label>
            <input class="form-check-input" type="radio" asp-for="Cinsiyet" value="E"><Label>Erkek</Label>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-4 offset-2">
            <input class="btn btn-primary" type="submit" value="Güncelle">
        </div>
    </div>
</form>