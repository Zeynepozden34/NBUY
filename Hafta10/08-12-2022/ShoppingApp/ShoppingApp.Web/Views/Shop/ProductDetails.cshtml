@using ShoppingApp.Web.Models.Dtos
@model ProductDetailsDto

<div class="card mb-3 mt-5">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/images/@Model.ImageUrl" class="m-5">
        </div>
        <div class="col-md-8">
            <div class="card-body m-5">
                <h5 class="card-title">@Model.Name</h5>
                <h6 class="card-title text-primary">@Model.Price</h6>
                <h6 class="card-title text-success">@Model.Description</h6>
                <button class="btn btn-success mt-5">Sepete ekle</button>
                <button class="btn btn-primary mt-5 ms-5">Favorile</button>
            </div>
        </div>
    </div>
</div>
<div class="d-flex"> 
    <button class="btn btn-primary mt-3 w-50 me-2">Ödeme Seçenekleri</button>
    <button class="btn btn-danger mt-3 w-50 me-2">İlgini Çekebilir</button>
    <button class="btn btn-success mt-3 w-50">Çok Satanlar</button>
</div>
 








