@using ShoppingApp.Web.Models.Dtos
@model ProductShoppingAddDto

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-4 text-center">
                @* Resim gelecek *@
                <img src="~/images/@Model.ImageUrl">
            </div>
            <div class="col-8">
                @* Diğer detaylar gelecek *@
                <h1 class="card-title display-6">@Model.Name</h1>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Price</p>
                <h6 class=" btn btn-info p-2 text-center">Ödeme Seçenekleri</h6>
            </div>
        </div>
    </div>
</div>

