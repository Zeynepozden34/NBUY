@model TeacherDto
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/Images/@Model.ImageUrl" class="m-1" style="height:100px; width:100px;">
               <div class="d-grid gap-1 mb-3">
                    <button class="btn btn-warning btn-sm me-md-2 mt-3" type="button">Detay Gör</button>
                    <button class="btn btn-info btn-sm mt-2" type="button">Ders Al</button>                                   
                </div>
        </div>
        <div class="col-md-8">
            <div class="card-body ms-3">
                <h5 class="card-title text-primary">@Model.Branch.Name</h5>
                <h6 class="text-danger">@($"{Model.FirstName} {Model.LastName}")</h6>
                <h6 class="dislay-6">@Model.UniverstyGraduatedFrom</h6>
                <p>Açıklama: @Model.Description</p>
                <h6 class="text-end">@Model.Location</h6>

             

            </div>
        </div>
    </div>
</div>